<div class="row">
  <div class="col-xs-8 col-xs-offset-2" style="padding-top : 50px">
    <%= link_to "Tous les restaurants", restaurants_path %>
    <h1><%= @restaurant.name %></h1>

    <ul class="list-group">
    <% @reviews.each do |review| %>
      <li class="list-group-item">
        <div class="row">
        <div class="col-xs-1"><span class="label label-success"><%= review.rating %></span></div>
        <div class="col-xs-11"><%= review.content %></div>
        </div>
      </li>
    <% end %>
    </ul>
    <%= link_to "Ajouter un avis", new_restaurant_review_path(@restaurant) %>
  </div>
</div>
